<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
			crossorigin="anonymous" />

        <link rel="stylesheet" href="css/styles.css">

        <style>
            .navbar {
                background-color: #ff4d00;
                color: #fff;
                height: 70px;
                font-size: 36px;
                font-weight: 400;
                padding: 10px;
            }

            .navbar a {
                text-decoration: none;
                color: #fff;
            }
        </style>
    </head>

    <body>
        <div class="navbar"><a href="/">TalkSpace</a></div>

        <% if(message.length > 0 ) { %>
			<div class="alert alert-success alert-dismissible fade show " role="alert" style="width: 90%; margin: 10px auto;">
				<p style="text-align: center; font-weight: bold; font-size: 20px; margin: 0"><%= message %></p> 
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		<% } %>


        <div class='formContainer'>
            <div class='formWrapper'>

                <span class='title'>
                    <h3>Login</h3>
                </span>
                <form onsubmit="return validateForm()" name="loginForm" class="loginRegisterForm" action="/login"
                    method="post">
                    <label>Email</label>
                    <input type='email' name="email" placeholder='Enter Your Email' required />
                    <label>Password</label>
                    <input type='password' name="password" placeholder='Enter Password' required />
                    <button>Login</button>
                    <!-- {err && <span>Something went wrong!</span>} -->
                </form>
                <p>You do not have a account?
                    <a href='/register'>Register</a>
                </p>
            </div>
        </div>


        <script>
            function validateForm() {
                let x = document.forms["loginForm"]["password"].value;

                if (x.length < 6) {
                    alert("password length should be greater than 6");
                    return false;
                }

            }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        
    </body>

</html>