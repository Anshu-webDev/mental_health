                        }]
                    }
                })

                const Chart1 = new Chart(ctx1, {
                    type: 'bar',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                        datasets: [{
                            label: 'depression level',
                            data: [12, 19, 3, 5, 2, 3],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });




                // Step 1: Prepare data
                const data = {
                    labels: ['Data 1', 'Data 2', 'Data 3', 'Data 4', 'Data 5', 'Data 6'],
                    datasets: [
                        {
                            label: 'Binary Data',
                            data: [1, 0, 1, 0, 1, 0],
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(75, 192, 192, 0.2)'
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(75, 192, 192, 1)'
                            ],
                            borderWidth: 1
                        }
                    ]
                };

                // Step 2: Set options
                const options = {
                    scales: {
                        y: {
                            ticks: {
                                beginAtZero: true,
                                stepSize: 1
                            }
                        }
                    }
                };

                // Step 3: Create chart
                const ctx = document.getElementById('myChart3').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar',
                    data: data,
                    options: options
                });

            </script>



